@model List<APSI_ResevationMod.Models.PROJECT>

@{
    ViewBag.Title = "ProjectList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Project List</h2>

<p>
    @Html.ActionLink("Create New Project", "CreateProject")
</p>


<table class="table">

    <tr>
        <th>
            Name
        </th>
        <th>
            Project code
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectCode)
        </td>
        
        <td>
            @Html.ActionLink("Details", "ProjectDetails", new { ProjectCode = item.ProjectCode })
        </td>
       @*@Html.ActionLink("Add Employees for project", "UserList", new { id = item.ProjectCode })*@
    </tr>
    }


</table>
