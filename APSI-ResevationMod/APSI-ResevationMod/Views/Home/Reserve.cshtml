@model APSI_ResevationMod.Models.Resource
@{
    ViewBag.Title = "Reserve";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reserve</h2>
<h2>@DateTime.Now.ToShortDateString()</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.DisplayFor(model => model.name)
        </div>

        <div class="form-group">

            @Html.Label("Reservation from", htmlAttributes: new { @class = "control-label col-md-2" })
            <div>
                @Html.EditorFor(model => model.ReservationDataFrom, new { htmlAttributes = new { @class = "form-control", type = "date" } })

            </div>
            @Html.Label("Reservation To", htmlAttributes: new { @class = "control-label col-md-2" })
            <div>
                @Html.EditorFor(model => model.ReservationDataTo, new { htmlAttributes = new { @class = "form-control", type = "date" } })

            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Reserve" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "ResourceList")
</div>
