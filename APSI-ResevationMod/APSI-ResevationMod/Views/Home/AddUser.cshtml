@model APSI_ResevationMod.Models.DetailsUser

@{
    ViewBag.Title = "Add New User";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>


<div class="row page-box">
    <div class="col-sm-12">
        <h2>New User</h2>
        @using (Html.BeginForm("Create"))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.User.Name)
                @Html.EditorFor(m => m.User.Name, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.User.Surname)
                @Html.EditorFor(m => m.User.Surname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.User.Surname, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m=>m.User.EmployeeID, "Type of Employee")
                @Html.DropDownList("EmployeeType",
                                   EnumHelper.GetSelectList(typeof(APSI_ResevationMod.Models.User.EmployeeType)) ,
                                   "Select Type of Employee",
                                   new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.User.EmployeeID)
                @Html.EditorFor(m => m.User.EmployeeID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.User.EmployeeID, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.User.ContactPhone)
                @Html.EditorFor(m => m.User.ContactPhone, new { htmlAttributes = new { @class = "form-control" }
                })
                @Html.ValidationMessageFor(m => m.User.ContactPhone, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.User.DateOfbirth)
                @Html.EditorFor(m => m.User.DateOfbirth, new { htmlAttributes = new { @class = "form-control" }
                })
                @Html.ValidationMessageFor(m => m.User.DateOfbirth, "", new { @class = "text-danger" })
            </div>

        }
    </div>
</div>


