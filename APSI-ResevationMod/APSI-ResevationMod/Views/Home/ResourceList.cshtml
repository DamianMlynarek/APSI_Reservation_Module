@model IEnumerable<APSI_ResevationMod.Models.Resource>

@{
    ViewBag.Title = "ResourceList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ResourceList</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Reservation From
        </th>
        <th>
            Reservation To
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReservationDataFrom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReservationDataTo)
        </td>
        <td>
            @Html.ActionLink("Reserve", "Reserve", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
