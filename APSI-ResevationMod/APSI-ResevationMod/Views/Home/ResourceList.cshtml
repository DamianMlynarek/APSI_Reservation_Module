@model IEnumerable<APSI_ResevationMod.Models.Resource>

@{
    ViewBag.Title = "ResourceList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ResourceList</h2>
<h2>@DateTime.Now.ToShortDateString()</h2>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            ID
        </th>
        <th>
            Store
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.store)
        </td>
        <td>
            @Html.ActionLink("Reserve", "Reserve", new { id = item.ID })
        </td>
        <td>
            @Html.ActionLink("Details", "ResourceDetails", new { id = item.ID })
        </td>
    </tr>
    }

</table>
