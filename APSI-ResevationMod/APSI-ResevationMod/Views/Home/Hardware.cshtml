@model APSI_ResevationMod.Models.DetailsHardware

@{
    ViewBag.Title = "Hardware";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<div class="row page-box">
    <div class="col-sm-12">


        @using (Html.BeginForm("Apply"))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.Hardware.Name)
                <div>
                    @Html.DisplayFor(m => m.Hardware.Name, new { htmlAttributes = new { @class = "form-control" } })
                    <p>Printer</p>
                </div>
            </div>
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.HardwareReservations)
                <div>
                    @Html.DisplayFor(m => m.HardwareReservations, new { htmlAttributes = new { @class = "form-control" } })
                    <p>Printer</p>
                </div>
            </div>
        }

    </div>
</div>