@model APSI_ResevationMod.Models.EmployeeReservation

@{
    ViewBag.Title = "Employee";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>


<div class="row page-box">
    <div class="col-sm-12">
        <div class="details">
            @Html.LabelFor(m => m.employee.EmployeeId)
            <div>
                @Html.DisplayFor(m => m.employee.EmployeeId, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.LabelFor(m => m.employee.Surname)
            <div>
                @Html.DisplayFor(m => m.employee.Surname, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.LabelFor(m => m.employee.Forename)
            <div>
                @Html.DisplayFor(m => m.employee.Forename, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div>
            <b>Reservations</b>
            <table style="width:100%">
                <tr>
                    <th>Project</th>
                    <th>EmployeeID</th>
                    <th>Date From</th>
                    <th>Date To</th>
                    <th>Time Percent Reserved</th>
                </tr>
                @foreach(var reservation in Model.reservations)
                {
                    <tr>
                        <td>@reservation.ProjectCode</td>
                        <td>@reservation.EmployeeId</td>
                        <td>@reservation.BeginDate.Date</td>
                        <td>@reservation.EndDate.Date</td>
                        <td>@reservation.Extent</td>
                    </tr>
                }
            </table>
        </div>
        <div>
            <b>Reservations details</b>
            <table style="width:100%">
                <tr>
                    <th>Day</th>
                    <th>Time Percent Reserved</th>
                </tr>
                @foreach(var day in Model.precentOfDaysReserved)
                {
                <tr>
                    <td>@day.Key.Date</td>
                    <td>@day.Value</td>
                </tr>
                }
            </table>
        </div>

        </div>
    </div>



